<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- required for the ZXing camera scanner -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Required for Android 13+ to post notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application

        android:name=".MyApplication"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HRManagement"
        tools:ignore="MissingClass">


        <!-- LOGIN SCREEN (Launcher) -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- USER DASHBOARD (important!) -->
        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- AttendanceActivity - scanner/check screen -->
        <activity
            android:name=".ui.attendance.AttendanceActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Leave Request screen -->
        <activity
            android:name=".ui.leave.LeaveRequestActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Override the library's CaptureActivity orientation (tools:replace required) -->
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            tools:replace="android:screenOrientation"
            android:exported="false" />

        <!-- Optional: Remove if unused -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.team.TeamActivity"
            android:exported="false" />
        <activity
            android:name=".ui.report.ReportActivity"
            android:exported="false"/>



        <service
            android:name=".util.MyFirebaseService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>



    </application>
</manifest>
