<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#09092F"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvRowDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2025-12-11"
        android:textColor="#FBFBFB"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRowCheckIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Check-in: 09:00 AM"
            android:textColor="#D5D5D5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvRowCheckOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-out: --:--"
            android:textColor="#D5D5D5FF"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvRowStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="PRESENT"
        android:textColor="#2EBAE6"
        android:textSize="12sp" />
</LinearLayout>
