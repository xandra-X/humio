<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#121826"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- HEADER -->
    <LinearLayout
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnBack"
            android:src="@drawable/ic_arrow_back"
            app:tint="@android:color/white"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Back"/>

        <TextView
            android:text="Team"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- SUPERVISOR CARD -->
    <LinearLayout
        android:background="@drawable/bg_supervisor_card"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Your Supervisor"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#1F2937"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Direct Manager and point of contact"
            android:textSize="13sp"
            android:textColor="#6B7280"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgSupervisorAvatar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_avatar_placeholder"
                android:background="@drawable/bg_circle"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:contentDescription="Supervisor avatar"/>

            <LinearLayout
                android:layout_marginStart="12dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtSupervisorName"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtSupervisorCode"
                        android:layout_marginStart="8dp"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:background="@drawable/bg_badge_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtSupervisorRole"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtSupervisorEmail"
                    android:textSize="13sp"
                    android:textColor="#4B5563"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- TEAM MEMBERS -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Team Members"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="View Active and Inactive Members"
            android:textSize="13sp"
            android:textColor="#9CA3AF"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- SEARCH -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_search"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_search"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:contentDescription="Search"/>

            <EditText
                android:id="@+id/edtSearch"
                android:hint="Search Members"
                android:singleLine="true"
                android:maxLines="1"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColor="@android:color/white"
                android:textColorHint="#9CA3AF"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMembers"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
